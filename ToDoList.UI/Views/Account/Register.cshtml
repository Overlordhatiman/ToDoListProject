@model ToDoList.UI.Models.RegisterModel
 
<h2>Registration</h2>
 
<form class="LoginForm" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-outline mb-4">
            <label asp-for="Email" for="form2Example1">Input Email</label><br />
            <input type="text" asp-for="Email" id="form2Example1" class="form-control"/>
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password" for="form2Example1">Input password</label><br />
            <input asp-for="Password" id="form2Example1" class="form-control"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-outline mb-4">
            <label asp-for="ConfirmPassword" for="form2Example2">Repeat password</label><br />
            <input asp-for="ConfirmPassword" id="form2Example2" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Registration" />
        </div>
    </div>
</form>